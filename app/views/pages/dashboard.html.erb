
<h1>Dashboard</h1>
<h2><%= link_to "Je loue un livre", books_path, class: "btn btn-success"  %></h2>

<div>
  <div class="row">
    <div class="col-md-6">
      <%= link_to 'mes livres', dashboard_path(status: 'livres'), class: "btn btn-primary d-block"  %>

    </div>
    <div class="col-md-6">
     <%= link_to 'mes transactions', dashboard_path(status: 'transactions'), class: "btn btn-success d-block"  %>

   </div>
 </div>
</div>



<% if params[:status] == 'livres' %>
<div class="container">
  <div style="display: flex;justify-content: center;flex-wrap: wrap">
    <div class="card">

      <div class="card-body" style="margin: 10px;width: 250px;">
        <%= link_to '+', new_book_path  %>
      </div>
    </div>
    <% @books.each do |book| %>
    <div class="card" style="margin: 10px;width: 250px;">

      <div class="card-footer"><%= book.name %></div>
      <div class="card-body" style="display: flex">

        <div class="info">
        <div><%= book.price_per_day %> €</div>
        <div><%= book.author %></div>
        <div><%= book.category %></div>
        </div>

      </div>
      <div class="card-footer" style="display: flex;justify-content: space-between;">
        <div><%= link_to 'edit', edit_book_path(book)  %></div>
        <div><%= link_to 'delete', book_path(book), method: :delete  %></div>
      </div>
    </div>
    <% end %>

  </div>
</div>
<% else %>
<div class="container">
  <h1>Mes transactions</h1>
  <% @transactions.each do |transaction| %>
  <div class="card">
    <div class="card-footer" style="display: flex;justify-content: space-between">
      <div>    <%= transaction.book.name %></div>

      <div>
        <%= transaction.date_begin.to_formatted_s(:rfc822)  %>
        <%= transaction.end_date.to_formatted_s(:rfc822) %>
      </div>
      <div> <%= transaction.book.user.email %> </div>
      <div>
        <% if transaction.status == 'av' %>
        <button class="btn btn-danger" disabled="">Attente de validation</button>
        <% end %>
        <% if transaction.status == 'ec' %>
        <button class="btn btn-success" diasabled>En cours</button>
        <% end %>
        <% if transaction.status == 'done' %>
        <button class="btn btn-primary" disabled="">done</button>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
  <% @transactionsOwner.each do |transaction| %>
  <div class="card">
    <div class="card-footer" style="display: flex;justify-content: space-between">
      <div>    <%= transaction.book.name %></div>

      <div>
        <%= transaction.date_begin.to_formatted_s(:rfc822)  %>
        <%= transaction.end_date.to_formatted_s(:rfc822) %>
      </div>

      <div>
        <% if transaction.status == 'av' %>
        <%= link_to 'à valider', update_dashboard_path('ec',transaction), class: "btn btn-danger"  %>
        <% end %>
        <% if transaction.status == 'ec' %>
        <%= link_to 'en cours', update_dashboard_path('done',transaction), class: "btn btn-success"  %>

        <% end %>
        <% if transaction.status == 'done' %>
        <button class="btn btn-primary" disabled=""> done</button>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>
