<h1>Create new book</h1>
<div class="container">
  <%= simple_form_for(@book) do |f| %>
  <%= f.input :name %>
  <%= f.input :author %>
  <%= f.input :price_per_day %>
  <%= f.input :category, collection: Book.categories.keys %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit %>
  <% end %>
</div>
