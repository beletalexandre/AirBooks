<h1 style="color: white">Search by area</h1>

<div class="container pb-5">
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-lat="<%= current_user.latitude %>"
  data-lng="<%= current_user.longitude %>"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV.fetch("MAPBOX_API_KEY") %>"
  ></div>
</div>
