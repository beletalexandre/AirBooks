<div class="container">


  <div class="row">
    <div class="col-md-4 offset-md-4">
     <%= simple_form_for(@user) do |f| %>
     <%= f.input :first_name %>
     <%= f.input :last_name %>
     <%= f.input :address %>
     <%= f.input :avatar %>
     <%= f.input :avatar_cache, as: :hidden %>
     <%= f.submit class:"btn btn-primary"%>
     <% end %>
     <hr>
     <%= link_to 'return to dashboard', dashboard_path(status: 'livres'), class: 'btn btn-sm btn-info'   %>

   </div>


 </div>

</div>
